<launch>
<!-- start camera driver -->
<!-- Includes from other ROS packages-->
<include file="$(find shape_registration)/launch/start_azure_rectifiers.launch"/>

<!-- Common arguments -->

<arg name="voxel_size" default="0.015"/>
<arg name="CT_arm_data_path" default="/home/nehil/Slicer-4.11.20210226-linux-amd64/result2/arm.pcd"/>
<arg name="CT_artery_data_path" default="/home/nehil/Slicer-4.11.20210226-linux-amd64/result2/artery.pcd"/>
<arg name="segmented_CT_arm_data_path" default="/home/nehil/Desktop/important_files/plane_segmented_arm.pcd"/>
<arg name="segmented_CT_artery_data_path" default="/home/nehil/Desktop/important_files/plane_segmented_artery.pcd"/>


<!-- Nodes -->

<!-- STEP 1: Crop an area given the depth image and start generating point cloud of that area -->
<node pkg="shape_registration" type="ROI_cropping_node" name="point_cloud_generation" output="screen" />

<!-- STEP 2 Extract the planar structures from both the CT and the RGBD camera data -->
<node pkg="shape_registration" type="plane_segmentation_node" name="plane_segmentation" output="screen">
    <param name="input_path_arm_data" type="string" value="$(arg CT_arm_data_path)"/>
    <param name="input_path_artery_data" type="string" value="$(arg CT_artery_data_path)"/>
    <param name="output_path_segmented_arm_data" type="string" value="$(arg segmented_CT_arm_data_path)"/>
    <param name="output_path_segmented_artery_data" type="string" value="$(arg segmented_CT_artery_data_path)"/>
    <param name="plane_segmentation_threshold_for_CT" type="double" value="23"/>
    <param name="plane_segmentation_threshold_for_RGBD" type="double" value="0.010"/>
</node>

<!-- STEP 3: Find the transformation between previous and the current frame using ICP -->
<node pkg="shape_registration" type="arm_tracking_node" name="arm_tracking" output="screen">
    <param name="icp_max_num_of_iterations" type="double" value="300"/>
    <param name="voxel_grid_filter_voxel_size" type="double" value="$(arg voxel_size)"/>
</node>

</launch>
